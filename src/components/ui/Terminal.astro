        aria-label="Minimize terminal"
        tabindex="-1"
        role="button"></button>
      <button
        class="btn"
        aria-label="Maximize terminal"
        tabindex="-1"
        role="button"></button>
    </div>
    <p class="user" aria-hidden="true">liammarega@admin: ~</p>
    <button class="add_tab" aria-label="Add new tab" tabindex="-1" role="button"
      >+</button
    >
  </div>
  <div class="terminal_body" id="terminal-body">
    <div id="terminal-history"></div>
    <div class="terminal_promt" id="terminal-current">
      <span class="terminal_user" aria-hidden="true">liammarega@admin:</span>
      <span class="terminal_location" aria-hidden="true">~</span>
      <span class="terminal_bling" aria-hidden="true">$</span>
      <span id="current-command" class="terminal_text"></span>
      <span class="terminal_cursor" aria-hidden="true"></span>
    </div>
  </div>
</div>

<script>
  const commands = [
    {
      command: "git pull",
      outputs: [
        'Updating <span class="text-yellow-400">4a2b3c4..5d6e7f8</span>',
        "Fast-forward",
        ' src/components/ui/Terminal.astro | <span class="text-green-400">246 +++</span>',
        " 1 file changed, 246 insertions(+)",
      ],
    },
    {
      command: "git add .",
      outputs: [],
    },
    {
      command: 'git commit -m "feat: enhance terminal animation"',
      outputs: [
        '[<span class="text-cyan-400">main 7g8h9i0</span>] feat: enhance terminal animation',
        ' <span class="text-gray-400">1 file changed, 10 insertions(+)</span>',
      ],
    },
    {
      command: "git push",
      outputs: [
        'Enumerating objects: <span class="text-green-400">5</span>, done.',
        "Counting objects: 100% (5/5), done.",
        'Delta compression using up to <span class="text-cyan-400">12 threads</span>',
        "Compressing objects: 100% (3/3), done.",
        "Writing objects: 100% (3/3), 450 bytes | 450.00 KiB/s, done.",
        "Total 3 (delta 2), reused 0 (delta 0), pack-reused 0",
        'To <span class="text-blue-400">github.com:liammarega/astro-portfolio.git</span>',
        '   <span class="text-yellow-400">5d6e7f8..7g8h9i0</span>  <span class="text-cyan-400">main</span> -> <span class="text-cyan-400">main</span>',
      ],
    },
  ];

  const historyContainer = document.getElementById("terminal-history");
  const currentCommandSpan = document.getElementById("current-command");
  const terminalBody = document.getElementById("terminal-body");
  const terminalWindow = document.querySelector(".container");

  async function typeWriter(text: string, element: HTMLElement, speed = 60) {
    for (let i = 0; i < text.length; i++) {
      element.textContent += text.charAt(i);
      const delay = speed + Math.random() * 80;
      await new Promise((resolve) => setTimeout(resolve, delay));
    }
  }

  function addHistoryLine(htmlContent: string, isCommand = false) {
    if (!historyContainer || !terminalBody) return;

    const line = document.createElement("div");
    if (isCommand) {
      line.className = "terminal_promt";
      line.innerHTML = `
        <span class="terminal_user">liammarega@admin:</span>
        <span class="terminal_location">~</span>
        <span class="terminal_bling">$</span>
        <span class="terminal_text">${htmlContent}</span>
      `;
    } else {
      line.className = "terminal_output";
      line.innerHTML = htmlContent;
    }
    historyContainer.appendChild(line);
    terminalBody.scrollTop = terminalBody.scrollHeight;
  }

  async function runSimulation() {
    if (!currentCommandSpan) return;

    await new Promise((resolve) => setTimeout(resolve, 800));

    for (const item of commands) {
      await typeWriter(item.command, currentCommandSpan);
      await new Promise((resolve) => setTimeout(resolve, 600));

      addHistoryLine(item.command, true);
      currentCommandSpan.textContent = "";

      for (const output of item.outputs) {
        await new Promise((resolve) => setTimeout(resolve, 150));
        addHistoryLine(output);
      }

      await new Promise((resolve) => setTimeout(resolve, 1000));
    }
  }

  if (
    terminalWindow &&
    !window.matchMedia("(prefers-reduced-motion: reduce)").matches
  ) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            runSimulation();
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.5 },
    );

    observer.observe(terminalWindow);
  }
</script>

