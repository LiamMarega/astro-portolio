---
interface Props {
  title: string;
  description?: string;
  url: string;
  icon?: string;
  gradient?: string;
}

const { title, description, url, icon, gradient = "from-purple-500 to-pink-500" } = Astro.props;
---

<a 
  href={url} 
  target="_blank" 
  rel="noopener noreferrer"
  class="group block w-full max-w-md mx-auto mb-4 transform transition-all duration-300 hover:scale-105 hover:shadow-2xl"
>
  <div class={`relative overflow-hidden rounded-2xl bg-gradient-to-r ${gradient} p-[2px] shadow-lg`}>
    <div class="relative bg-black/90 backdrop-blur-sm rounded-2xl p-6 h-full transition-all duration-300 group-hover:bg-black/80">
      <div class="flex items-center space-x-4">
        {icon && (
          <div class="flex-shrink-0">
            <div class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center text-2xl">
              {icon}
            </div>
          </div>
        )}
        <div class="flex-1 min-w-0">
          <h3 class="text-lg font-semibold text-white truncate group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-white group-hover:to-gray-300">
            {title}
          </h3>
          {description && (
            <p class="text-sm text-gray-300 mt-1 line-clamp-2">
              {description}
            </p>
          )}
        </div>
        <div class="flex-shrink-0">
          <svg 
            class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors duration-300" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</a>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>