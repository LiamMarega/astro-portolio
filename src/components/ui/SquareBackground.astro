---
const rows = new Array(150).fill(1);
const cols = new Array(100).fill(1);
let colors = ['--white'];
---

<div class='absolute left-1/4 p-4 -top-1/4 flex -translate-x-1/2 -translate-y-1/2 w-full h-full z-0'>
  {
    rows.map((_, i) => (
      <div class='w-16 h-8  border-l  border-slate-700 relative'>
        {cols.map((_, j) => (
          <div class='hover:bg-gray-100 w-16 h-8  border-r border-t border-slate-700 relative'>
            {j % 2 === 0 && i % 2 === 0 ? (
              <svg
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke-width='1.5'
                stroke='currentColor'
                class='absolute h-6 w-10 -top-[14px] -left-[22px] text-slate-700 stroke-[1px] pointer-events-none'
              >
                <path stroke-linecap='round' stroke-linejoin='round' d='M12 6v12m6-6H6' />
              </svg>
            ) : null}
          </div>
        ))}
      </div>
    ))
  }
</div>
