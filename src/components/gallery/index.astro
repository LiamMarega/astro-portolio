<script>
  // Optimized scroll reveal with performance improvements
  let isObserverActive = true;

  const observerOptions = {
    threshold: 0.15,
    rootMargin: "0px 0px -100px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    if (!isObserverActive) return;

    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const element = entry.target as HTMLElement;
        const delay = parseInt(element.dataset.delay || "0");

        // Use requestAnimationFrame for smooth animations
        requestAnimationFrame(() => {
          setTimeout(() => {
            element.classList.add("revealed");
          }, delay);
        });

        // Stop observing once revealed to prevent re-triggering
        observer.unobserve(element);
      }
    });
  }, observerOptions);

  // Initialize when DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".project-card[data-reveal]");

    // Only observe if cards exist
    if (cards.length > 0) {
      cards.forEach((card) => observer.observe(card));
    }

    // Cleanup observer when all cards are revealed
    setTimeout(() => {
      isObserverActive = false;
    }, 3000); // Stop after 3 seconds max
  });

  // Cleanup on page unload
  window.addEventListener("beforeunload", () => {
    observer.disconnect();
    isObserverActive = false;
  });
</script>

<style is:global>
  .gallery-section {
    position: relative;
    padding: 3rem 0;
    min-height: auto;
  }

  .gallery-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    position: relative;
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .gallery-title {
    font-size: clamp(1.75rem, 4vw, 3.5rem);
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 0.75rem;
    background: linear-gradient(135deg, #ffffff 0%, #a0a0a0 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1.2;
  }

  .gallery-subtitle {
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    color: #888;
    font-weight: 300;
    margin: 0;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .project-card {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: #1a1a1a;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
    opacity: 0;
    transform: translateY(30px) scale(0.98);
    will-change: transform, opacity;
  }

  .project-card.revealed {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .project-card:hover {
    transform: translateY(-4px) scale(1.005);
    box-shadow: 0 8px 25px rgba(0, 198, 255, 0.1);
  }

  .card-image-wrapper {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .card-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1); /* Faster transition */
  }

  .project-card:hover .card-image-wrapper img {
    transform: scale(1.05); /* Reduced scale */
  }

  .card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      rgba(0, 0, 0, 0) 100%
    );
    padding: 1.5rem; /* Reduced padding */
    transform: translateY(15px); /* Reduced movement */
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1); /* Faster transition */
  }

  .project-card:hover .card-overlay {
    transform: translateY(0);
    opacity: 1;
  }

  .card-content h3 {
    color: #ffffff;
    font-size: 1.3rem; /* Slightly reduced */
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .card-content p {
    color: #cccccc;
    font-size: 0.9rem; /* Slightly reduced */
    line-height: 1.5; /* Reduced line height */
    margin-bottom: 1rem;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    color: #eaff00;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.85rem; /* Slightly reduced */
    padding: 0.4rem 0.8rem; /* Reduced padding */
    border: 1px solid #eaff00;
    border-radius: 20px; /* Reduced radius */
    transition: all 0.25s ease; /* Faster transition */
    background: rgba(0, 198, 255, 0.1);
    backdrop-filter: blur(8px); /* Reduced blur */
  }

  .card-link:hover {
    background: #eaff00;
    color: #000;
    transform: translateY(-1px); /* Reduced movement */
    box-shadow: 0 4px 12px rgba(255, 255, 0, 0.3); /* Reduced shadow */
  }

  /* Mobile First Responsive Design */
  @media (min-width: 480px) {
    .gallery-section {
      padding: 4rem 0;
    }
    
    .gallery-container {
      padding: 0 1.5rem;
    }
    
    .card-image-wrapper {
      height: 220px;
    }
  }
  
  @media (min-width: 640px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
    }
    
    .gallery-header {
      margin-bottom: 2.5rem;
    }
  }
  
  @media (min-width: 768px) {
    .gallery-section {
      padding: 5rem 0;
    }
    
    .card-image-wrapper {
      height: 240px;
    }
  }
  
  @media (min-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
    
    .gallery-header {
      margin-bottom: 3rem;
    }
    
    .card-image-wrapper {
      height: 260px;
    }
  }
  
  @media (min-width: 1280px) {
    .gallery-section {
      padding: 6rem 0;
    }
    
    .gallery-grid {
      gap: 2rem;
    }
  }

  /* Accessibility and Motion Preferences */
  @media (prefers-reduced-motion: reduce) {
    .project-card {
      transition: none;
    }

    .project-card:hover {
      transform: none;
    }

    .card-image-wrapper img {
      transition: none;
    }

    .project-card:hover .card-image-wrapper img {
      transform: none;
    }
  }
  
  @media (prefers-contrast: high) {
    .project-card {
      border: 1px solid #ffffff;
    }
    
    .card-overlay {
      background: rgba(0, 0, 0, 0.9);
    }
  }
  
  /* Touch device optimizations */
  @media (hover: none) and (pointer: coarse) {
    .project-card:hover {
      transform: none;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }
    
    .project-card:hover .card-image-wrapper img {
      transform: none;
    }
  }
</style>
