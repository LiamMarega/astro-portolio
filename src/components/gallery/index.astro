<script>
  // Optimized scroll reveal with performance improvements
  let isObserverActive = true;

  const observerOptions = {
    threshold: 0.15,
    rootMargin: "0px 0px -100px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    if (!isObserverActive) return;

    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const element = entry.target as HTMLElement;
        const delay = parseInt(element.dataset.delay || "0");

        // Use requestAnimationFrame for smooth animations
        requestAnimationFrame(() => {
          setTimeout(() => {
            element.classList.add("revealed");
          }, delay);
        });

        // Stop observing once revealed to prevent re-triggering
        observer.unobserve(element);
      }
    });
  }, observerOptions);

  // Initialize when DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".project-card[data-reveal]");

    // Only observe if cards exist
    if (cards.length > 0) {
      cards.forEach((card) => observer.observe(card));
    }

    // Cleanup observer when all cards are revealed
    setTimeout(() => {
      isObserverActive = false;
    }, 3000); // Stop after 3 seconds max
  });

  // Cleanup on page unload
  window.addEventListener("beforeunload", () => {
    observer.disconnect();
    isObserverActive = false;
  });
</script>

<style is:global>
  .gallery-section {
    position: relative;
    padding: 6rem 0;
    min-height: auto; /* Changed from 100vh to auto */
