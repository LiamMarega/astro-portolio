  .project-card.revealed {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .project-card:hover {
    transform: translateY(-8px) scale(1.01); /* Reduced hover effect */
    box-shadow: 0 15px 40px rgba(0, 198, 255, 0.15); /* Reduced glow */
  }

  .card-image-wrapper {
    position: relative;
    height: 250px; /* Reduced from 300px */
    overflow: hidden;
  }

  .card-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1); /* Faster transition */
  }

  .project-card:hover .card-image-wrapper img {
    transform: scale(1.05); /* Reduced scale */
  }

  .card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      rgba(0, 0, 0, 0) 100%
    );
    padding: 1.5rem; /* Reduced padding */
    transform: translateY(15px); /* Reduced movement */
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1); /* Faster transition */
