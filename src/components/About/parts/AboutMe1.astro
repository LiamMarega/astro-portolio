<!-- About Me Section 1 -->
<div id="about_me_1" class="relative w-full max-w-5xl mx-auto">
  <div class="flex flex-col md:flex-row gap-8 md:gap-12 lg:gap-16">
    <!-- Text content -->
    <div
      class="flex justify-center md:justify-start items-center md:items-start flex-col w-full md:w-1/2 gap-4 md:gap-6 lg:gap-8"
    >
      <h3
        id="aboutTitle1"
        class="text-2xl sm:text-3xl md:text-4xl lg:text-6xl font-bold text-black w-fit
        p-4 rounded-2xl flex justify-center items-center bg-green-200 mx-auto md:mx-0"
      >
        Who is
      </h3>

      <h4
        id="aboutTitle2"
        class="text-lg sm:text-xl md:text-2xl lg:text-4xl font-bold text-black w-fit
        p-3 sm:p-4 md:p-5 rounded-2xl flex justify-center items-center bg-yellow-300 mx-auto md:mx-0"
      >
        Liam?
      </h4>

      <p
        id="aboutDesc"
        class="text-center md:text-start text-xl sm:text-2xl md:text-3xl lg:text-4xl
        max-w-full md:max-w-[90%]"
      >
        Developer based in Argentina. <br />
        Technology lover, willing to grow and challenge myself in every project
      </p>
    </div>

    <!-- Map image -->
    <div
      id="aboutMap"
      class="flex justify-center items-center md:items-start w-full md:w-1/2"
    >
      <img
        src="/images/draws/arg.webp"
        alt="Argentina map"
        loading="lazy"
        class="w-40 sm:w-48 md:w-64 lg:w-[30rem] object-contain"
      />
    </div>
  </div>
</div>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Solo inicializar animaciones si no estamos en escritorio
    // (las animaciones de escritorio se manejan en gsap.js para el scroll horizontal)
    if (window.innerWidth < 768) {
      const isMobile = true;

      // 3D Sign/Billboard effect animation
      gsap.fromTo(
        "#aboutTitle2",
        { opacity: 0, rotationX: 90 },
        {
          opacity: 1,
          rotationX: 0,
          duration: 1,
          transformOrigin: "center top",
          ease: "back.out(1.7)",
          delay: 0.3,
          scrollTrigger: {
            trigger: "#about_me_1",
            start: "top 80%",
            toggleActions: "play none none reverse",
          },
        }
      );

      gsap.fromTo(
        "#aboutDesc",
        { opacity: 0, y: 50 },
        {
          opacity: 1,
          y: 0,
          duration: 1,
          delay: 0.6,
          scrollTrigger: {
            trigger: "#about_me_1",
            start: "top 80%",
            toggleActions: "play none none reverse",
          },
        }
      );

      gsap.fromTo(
        "#aboutMap",
        { opacity: 0, scale: 0.8 },
        {
          opacity: 1,
          scale: 1,
          duration: 1,
          delay: 0.6,
          scrollTrigger: {
            trigger: "#about_me_1",
            start: "top 80%",
            toggleActions: "play none none reverse",
          },
        }
      );
    } else {
      // En escritorio, simplemente mostrar todo sin animaciÃ³n de scroll
      gsap.set("#aboutTitle2", { opacity: 1, rotationX: 0 });
      gsap.set("#aboutDesc", { opacity: 1, y: 0 });
      gsap.set("#aboutMap", { opacity: 1, scale: 1 });
    }
  });
</script>
