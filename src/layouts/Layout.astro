---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{title}</title>
</head>
<body>
	<slot />
</body>
</html>

<style is:global>
	html {
		color-scheme: dark light;
	}
	body {
		background-color: black;
		font-family: Arial, sans-serif;
		color: black
	}
</style>